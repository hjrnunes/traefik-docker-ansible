scrape_configs:
  - job_name: 'traefik'
    scrape_interval: 5s
    basic_auth:
      username: "{{ traefik_api_user }}"
      password: "{{ traefik_api_password }}"

    static_configs:
      - targets: ['traefik:8080']

  - job_name: 'node-exporter'
    scrape_interval: 5s

    static_configs:
      - targets: ['node-exporter:9100']

  - job_name: 'cadvisor'
    scrape_interval: 5s

    static_configs:
         - targets: ['cadvisor:8080']
